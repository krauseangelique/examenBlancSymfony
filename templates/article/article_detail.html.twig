{% extends 'base.html.twig' %}

{% block title %}
	{{this_article.nom}}
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">


		<h1>{{this_article.nom}}</h1>

		<p>
			<small>Détail de l'article n°
				{{this_article.id}}</small>
		</p>
		<p>{{this_article.contenu}}</p>
		<p>Article nbre de vote :
			{{this_article.votes}}</p>
		<p>Ecris le :
			<time datetime="{{this_article.dateDeCreation|date('Y-m-d')}}">{{this_article.dateDeCreation|date('d-m-Y')}}</time>

		</p>

	</div>
{% endblock %}
