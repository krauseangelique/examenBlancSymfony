{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories de livres
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Liste des catégories ✅</h1>
		<ul>
			{% for categorie in categories %}
				<li>{{categorie.nom}}</li>
			{% endfor %}
		</ul>

	</div>
{% endblock %}
